---
const { title } = Astro.props;
import Header from "../components/header.astro";
import EntryModal from "../components/leaderboard/entry-modal.astro";
import Navigation from "../components/navigation.astro";
import "@fontsource/poppins";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-background-950">
        <div
            class="bg-[url('./grid.svg')] bg-cover bg-center bg-no-repeat min-h-screen"
        >
            <Navigation />
            <EntryModal />
            <slot />
            <script
                is:inline
                src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
            ></script>
        </div>
    </body>
</html>
