                                        fill="#d50b2e"
                                        width="24"
                                        height="24"
                                        d="M 439.5,823.5 C 420.167,823.5 400.833,823.5 381.5,823.5C 247.77,811.248 142.936,750.248 67,640.5C 29.518,582.388 8.18464,518.721 3,449.5C 2.5,301.834 2.33333,154.167 2.5,6.5C 36.8333,6.5 71.1667,6.5 105.5,6.5C 105.333,152.5 105.5,298.5 106,444.5C 116.568,543.865 163.402,620.699 246.5,675C 323.118,720.66 404.785,732.66 491.5,711C 598.067,679.433 668.9,610.933 704,505.5C 711.247,480.684 715.247,455.351 716,429.5C 716.5,288.5 716.667,147.5 716.5,6.5C 750.833,6.5 785.167,6.5 819.5,6.5C 819.97,155.177 819.47,303.844 818,452.5C 808.17,559.658 763.67,649.158 684.5,721C 614.115,781.534 532.449,815.701 439.5,823.5 Z"
