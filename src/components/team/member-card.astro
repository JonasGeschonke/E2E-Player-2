---
import type { Social } from "../../env";

interface Props {
    name: string;
    role: string;
    img: string;
    socials: Social[];
    portrait: boolean;
}

const { name, role, socials, img, portrait } = Astro.props;
---

<div class="text-center text-gray-500 dark:text-gray-400">
    {
        portrait ? (
            <img
                class="mx-auto mb-4 w-32 h-36 rounded-full"
                src={img}
                alt={name + " - Avatar"}
            />
        ) : (
            <img
                class="mx-auto object-cover mb-4 w-36 h-36 rounded-full"
                src={img}
                width="500px"
                height="500px"
                loading="lazy"
                alt={name + " - Avatar"}
            />
        )
    }

    <h3
        class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
        {name}
    </h3>
    <p>{role}</p>
    <ul class="flex justify-center mt-4 space-x-4">
        {
            socials.map((social: Social) => (
                <li>
                    <a
                        href={social.url}
                        class="text-[#39569c] hover:text-gray-900 dark:hover:text-white"
                    >
                        {social.icon == "github" && (
                            <svg
                                class="w-6 h-6"
                                fill="rgb(85, 113, 40)"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
