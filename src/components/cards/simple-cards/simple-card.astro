---
const { quickLink, lightBG } = Astro.props;
---

<div class:list={[lightBG ? "bg-background-900/65 shadow-md" : "bg-background-900/65"]} class="flex flex-col items-center p-6 bg-background-900/65 border border-background-900/45 rounded-lg shadow">
    <slot name="title" />
    <slot name="text" />
    {
        quickLink && (
            <a
                href={quickLink}
                class="inline-flex justify-center items-center py-2.5 px-5 text-base font-medium text-center text-white rounded-lg bg-accent-400 hover:bg-accent-500 focus:ring-4 focus:ring-accent-300"
            >
                Read more
                <svg
                    class="w-3.5 h-3.5 ms-2 rtl:rotate-180"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 10"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 5h12m0 0L9 1m4 4L9 9"
                    />
                </svg>
            </a>
        )
    }
</div>
